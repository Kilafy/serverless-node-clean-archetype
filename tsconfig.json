{
    "compilerOptions": {
        "lib": ["es2018", "dom"],
        "moduleResolution": "node",
        "module": "CommonJS",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "target": "es2018",
        "outDir": "./dist/*",
        "rootDir": "./"
    },
    "exclude": ["node_modules"],
    "include": ["src/", "test/"]
}